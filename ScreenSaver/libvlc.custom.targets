<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <ItemGroup>
    <!-- 
    
    Files from the libvlc package to include.
    
    Without specifying this, all files get included (150MB+).
    
    Note "*" must be ecaped ("%2A")
    -->
    
    <VlcWindowsX64IncludeFiles Include="libvlc.dll;libvlccore.dll" />
    <VlcWindowsX64IncludeFiles Include="plugins\access\libhttp_plugin.dll;plugins\access\libhttps_plugin.dll;plugins\access\libfilesystem_plugin.dll" />
    <VlcWindowsX64IncludeFiles Include="plugins\codec\%2A%2A;plugins\stream_extractor\%2A%2A;plugins\video_output\%2A%2A" />
    
    <VlcWindowsX86IncludeFiles Include="libvlc.dll;libvlccore.dll" />
    <VlcWindowsX86IncludeFiles Include="plugins\access\libhttp_plugin.dll;plugins\access\libhttps_plugin.dll;plugins\access\libfilesystem_plugin.dll" />
    <VlcWindowsX86IncludeFiles Include="plugins\codec\%2A%2A;plugins\stream_extractor\%2A%2A;plugins\video_output\%2A%2A" />
  </ItemGroup>
</Project>